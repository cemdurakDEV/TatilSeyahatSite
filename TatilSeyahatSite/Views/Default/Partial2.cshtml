@using TatilSeyahatSite.Models.Siniflar
@model List<Blog>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Partial2</title>
</head>
<body>
    <div>
        @foreach (var x in Model)
        {
            <div class="right">
                <div class="bot-left">
                    <img src="@x.BlogImage" alt="" style ="width:300px; height:150px;"/>
                </div>
                <div class="left-text">
                    <h4>@x.Baslik</h4>
                    <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                    <p>@x.Aciklama.Substring(0, 200) ....</p>
                    <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku</span></a></p>
                </div>
            </div>
        }
    </div>
</body>
</html>
